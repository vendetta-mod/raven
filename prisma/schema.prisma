generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum CaseType {
    WARN
    MUTE
    UNMUTE
    KICK
    BAN
    UNBAN
}

model Case {
    id          Int      @id @default(autoincrement())
    type        CaseType
    reason      String @default("No reason provided")
    moderatorId String
    userId      String
    createdAt   DateTime @default(now())
    expiresAt   DateTime?
}
